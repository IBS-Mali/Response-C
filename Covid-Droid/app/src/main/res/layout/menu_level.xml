<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ActivityQuiz">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        style="@android:style/Animation.Translucent"
        android:layout_above="@+id/versionButton">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/imageButton"
                    android:layout_width="200dp"
                    android:layout_height="79dp"
                    android:background="@drawable/ic_quiz" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="COVID-19"
                    android:textColor="@android:color/black"
                    android:textSize="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="187dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/level1"
                    android:layout_width="201dp"
                    android:layout_height="166dp"
                    android:background="@drawable/assa"
                    android:bottomLeftRadius="180dp"
                    android:bottomRightRadius="180dp"
                    android:onClick="goto_len1"
                    android:text="1"
                    android:textSize="50dp"
                    android:topLeftRadius="180dp"
                    android:topRightRadius="180dp"></Button>

                <Button
                    android:id="@+id/level2"
                    android:layout_width="wrap_content"
                    android:layout_height="168dp"
                    android:background="@drawable/assa"
                    android:bottomLeftRadius="180dp"
                    android:bottomRightRadius="180dp"
                    android:onClick="goto_len1"
                    android:text="2"
                    android:textSize="50dp"
                    android:topLeftRadius="180dp"
                    android:topRightRadius="180dp"></Button>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/level3"
                android:layout_width="205dp"
                android:layout_height="176dp"
                android:background="@drawable/assa"
                android:bottomLeftRadius="180dp"
                android:bottomRightRadius="180dp"
                android:text="3"
                android:textSize="50dp"
                android:topLeftRadius="180dp"
                android:topRightRadius="180dp"></Button>

            <Button
                android:id="@+id/level4"
                android:layout_width="wrap_content"
                android:layout_height="176dp"
                android:background="@drawable/assa"
                android:bottomLeftRadius="180dp"
                android:bottomRightRadius="180dp"
                android:text="4"
                android:textSize="50dp"
                android:topLeftRadius="180dp"
                android:topRightRadius="180dp"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="203dp"
                android:layout_height="170dp"
                android:background="@drawable/assa"
                android:id="@+id/level5"
                android:text="5"
                android:textSize="50dp"
                android:bottomLeftRadius="180dp"
                android:bottomRightRadius="180dp"
                android:topLeftRadius="180dp"
                android:topRightRadius="180dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:background="@drawable/assa"
                android:id="@+id/level6"
                android:text="6"
                android:textSize="50dp"
                android:topLeftRadius="180dp"
                android:topRightRadius="180dp"
                android:bottomLeftRadius="180dp"
                android:bottomRightRadius="180dp"></Button>

        </LinearLayout>


            <Button
                android:id="@+id/cancel"
                android:layout_width="236dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_play"
                android:text="Quitter" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>