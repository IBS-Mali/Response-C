<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ActivityQuiz">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        style="@android:style/Animation.Translucent"
        android:layout_above="@+id/versionButton">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="200dp"
                    android:layout_height="79dp"
                    android:background="@drawable/ic_quiz" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="COVID-19"
                    android:textColor="@android:color/black"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/button"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:onClick="goto_len1"
                    android:background="#70B2E6"
                    android:bottomLeftRadius="180dp"
                    android:bottomRightRadius="180dp"
                    android:paddingTop="20dp"
                    android:text="Leven 1"
                    android:textColor="#171616"
                    android:topLeftRadius="180dp"
                    android:topRightRadius="180dp" />
                <Button
                    android:id="@+id/button2"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Leven 2"
                    android:textSize="30dp"
                    android:onClick="goto_len1"
                    android:background="#70B2E6"
                    android:bottomLeftRadius="180dp"
                    android:bottomRightRadius="180dp"
                    android:paddingTop="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#171616"
                    android:topLeftRadius="180dp"
                    android:topRightRadius="180dp"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button3"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#70B2E6"
                android:bottomLeftRadius="180dp"
                android:bottomRightRadius="180dp"
                android:paddingTop="20dp"
                android:onClick="goto_len1"
                android:text="Leven 3"
                android:textColor="#171616"
                android:topLeftRadius="180dp"
                android:topRightRadius="180dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Leven 4"
                android:layout_margin="10dp"
                android:textSize="30dp"
                android:background="#70B2E6"
                android:bottomLeftRadius="180dp"
                android:bottomRightRadius="180dp"
                android:paddingTop="20dp"
                android:layout_marginTop="15dp"
                android:textColor="#171616"
                android:onClick="goto_len1"
                android:topLeftRadius="180dp"
                android:topRightRadius="180dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:background="#70B2E6"
                android:bottomLeftRadius="180dp"
                android:bottomRightRadius="180dp"
                android:paddingTop="20dp"
                android:text="Leven 5"
                android:onClick="goto_len1"
                android:textColor="#171616"
                android:topLeftRadius="180dp"
                android:topRightRadius="180dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Leven 6"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:background="#70B2E6"
                android:bottomLeftRadius="180dp"
                android:bottomRightRadius="180dp"
                android:paddingTop="20dp"
                android:layout_marginTop="15dp"
                android:onClick="goto_len1"
                android:textColor="#171616"
                android:topLeftRadius="180dp"
                android:topRightRadius="180dp"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>